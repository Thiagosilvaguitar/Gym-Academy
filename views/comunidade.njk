{% extends "layout.njk" %}



{% block head%}
 <title>Comunidade de Videos</title>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons"rel="stylesheet">

{% endblock %}

{% block content %}
   <div>
      <h1>Comunidade de Videos</h1>
   </div>

<section class="cards">
{%for item in items%}
      <div class="card" id="{{item.id}}"> <!--substituições nos parametros -->
         <div class="card-image-container">
            <img src="https://img.youtube.com/vi/{{item.id}}/maxresdefault.jpg" alt="imagem de {{item.tittle}}">

         </div>

         <div class="card-content">
            <p>{{item.tittle}}</p>
         </div>
         <div class="card-info">
            <p>{{item.duration}}</p>
            <p class="card-price">
               {{item.price}}
            </p>
         </div>
      </div>
     {% endfor %}

     </section>
      
<script src="/scripts.js"></script>
   

{% endblock %}



